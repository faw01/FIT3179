{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Annual CO2 emissions per capita by Country",
    "width": 800,
    "height": 400,
    "projection": {"type": "equalEarth"},
    "data": {
      "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "transform": [
      {
        "lookup": "id",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/faw01/FIT3179/main/Homework%20Assessment%209/co-emissions-per-capita.csv"
          },
          "key": "Country",
          "fields": ["Annual CO2 emissions per capita", "Year"]
        }
      },
      {
        "calculate": "toDate(datum.Year)",
        "as": "Year"
      }
    ],
    "mark": {"type": "geoshape"},
    "encoding": {
      "color": {
        "field": "Annual CO2 emissions per capita",
        "type": "quantitative" 
      },
      "tooltip": [
        {"field": "properties.NAME", "type": "nominal", "title": "Country"},
        {"field": "Annual CO2 emissions per capita", "type": "quantitative", "format": ".1f", "title": "Annual CO2 emissions per capita"},
        {"field": "YearDate", "type": "temporal", "title": "Year"}
      ]
    }
}
